<div class="container-main-category">
  <div class="box-main-category">
    <p style="color: white"><%= notice %></p>
    <div class="title-main-category">
      <h1>Categories</h1>
    </div>
    <div class="list-main-category" id="categories">
      <table class="table-category">
        <thead>
          <tr>
            <th>Name</th>
            <th>Edit</th>
            <th>Delete</th>
          </tr>
        </thead>
        <tbody>
          <% @categories.each do |category| %>
            <tr>
              <td><%= render category ,class: 'name_category'%></td>
              <td class='buttons'>
                <%= link_to edit_category_path(category) do %>
                  <%= image_tag 'lapiz.svg', alt: 'Edit', class: 'button-edit' %> 
                <% end %>
              </td>
              <td class='buttons'>
                <%= button_to category_path(category), method: :delete do %>
                  <%= image_tag 'basura.svg', class: 'button-delete' %> 
                <% end %>
              </td>
            </tr>    
          <% end %>
        </tbody>
      </table>
    </div>
    <div class = 'nav_categories'>
      <%== pagy_nav(@pagy) %>
    </div>
    <div class="link-main-category">
      <%= link_to "New category", new_category_path %>
      <%= link_to "Return", root_path %>
    </div>
  </div>
</div>

