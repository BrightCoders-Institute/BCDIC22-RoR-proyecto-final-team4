<div class="container-main-category">
  <div class="box-main-category">
    <p style="color: green"><%= notice %></p>
    <div class="title-main-category">
      <h1>Categories</h1>
    </div>
    <div class="list-main-category" id="categories">
      <% @categories.each do |category| %>
        <%= render category %>
        <p>
          <%= link_to "Show this category", category %>
        </p>
      <% end %>
    </div>
    <div class="link-main-category">
      <%= link_to "New category", new_category_path %>
    </div>
  </div>
</div>