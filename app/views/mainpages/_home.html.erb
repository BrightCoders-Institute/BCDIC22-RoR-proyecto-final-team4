          </div>
        </div>
      <h2>
        <%= 
          if params[:user_id].nil?
            current_user.name
          else
            user = User.select(:name).find_by(id: params[:user_id].to_i)
            user.name
          end
        %>
      </h2>
    </div>
    <div class="home_content_buttons">
