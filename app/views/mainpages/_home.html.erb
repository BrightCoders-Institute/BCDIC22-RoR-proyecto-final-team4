          <%= image_tag("engranaje.png") %>
        </a>
        <div id="myModal" class="modal">
            <div class="modal-content">
              <%= render 'devise/registrations/edit'%> 
              <%= javascript_include_tag 'modal_controller', 'modalClose' %>
