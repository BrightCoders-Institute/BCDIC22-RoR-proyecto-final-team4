<ul class="main_cupons_content_promotions">
  <% if @result.length == 0 %>
    <div class="noFound">
      <h2>Resultado no encontrado!! ¯\_(ツ)_/¯</h2>
      <h3>Favor de intentar con otro nombre.</h3>
    </div>
  <% else %>
    <% @result.each do |result| %>
      <li>
        <div class="box" >
          <%=
            if result.is_a? Cupon
              if result.image_url == "" 
                image_tag "coupon_defaul.webp"
              else 
                image_tag result.image_url 
              end
            end
          %>
          <div class="information">
            <h1><%= (result.is_a? Cupon) ? result.title : result.name %></h1>
            <p><%= (result.is_a? Cupon) ? result.description : "" %></p>
          </div>
          <%= link_to new_cupon_path do %>
            <div class="button_container">
              <button>ver</button>
            </div>
          <% end %>
        </div>
      </li>
    <%end%>
  <%end%>
</ul>
