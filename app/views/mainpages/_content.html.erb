<ul class="main_cupons_content_promotions">
  <% @cupon.each do |cupon| %>
    <li>
      <div class="box" >
        <%=
          if cupon.image_url == "" 
            image_tag "coupon_defaul.webp"
          else 
            image_tag cupon.image_url 
          end 
        %>
        <div class="information">
          <h1><%= cupon.title %></h1>
          <p><%= cupon.description %></p>
        </div>
        <%= link_to cupon_path(cupon.id) do %>
          <div class="button_container">
            <button>ver</button>
          </div>
        <%else%>
          <div class="box user">
            <%= image_tag "user.png"%>
            <div class="information">
              <h1><%= result.name %></h2>
            </div>
            <div class="button_container"><button>ver</button></div>
          </div>
        <%end%>
      </li>
    <%end%>
  <%end%>
</ul>
