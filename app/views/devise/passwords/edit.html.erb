<div class="container_recobery">
  <div class="form_box_recobery phone">
		<h2>Change your password</h2>

		<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
			<%= render "devise/shared/error_messages", resource: resource %>
			
			<%= f.hidden_field :reset_password_token %>

			<div class="field_recobery">
				<%= f.label :password, "New password" %><br />
				<% if @minimum_password_length %>
					<em>(<%= @minimum_password_length %> characters minimum)</em><br />
				<% end %>
				<%= f.password_field :password, placeholder:"New password",autofocus: true, autocomplete: "new-password" %>
			</div>

			<div class="field_recobery">
				<%= f.label :password_confirmation, "Confirm new password" %><br />
				<%= f.password_field :password_confirmation, placeholder:"Confirm new password", autocomplete: "new-password" %>
			</div>

			<div class="actions_recobery">
				<%= f.submit "Change my password" %>
			</div>
		<% end %>

		<div class="a_login_singup">
			<%= render "devise/shared/links" %>
		</div
  </div>
</div>
